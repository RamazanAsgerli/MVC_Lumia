@using Core.Models

@model Team
<div class="container">

    <form method="post" enctype="multipart/form-data">


        <div class="mb-3 col-md-4">
            <input asp-for="Name" class="form-control">
            <label asp-for="Name">Name</label>
            <span asp-validation-for="Name" style="color:darkred"></span>
        </div>

        <div class="mb-3 col-md-4">
            <input asp-for="Position" class="form-control">
            <label asp-for="Position">Position</label>
            <span asp-validation-for="Position" style="color:darkred"></span>
        </div>

        <div class="mb-3 col-md-4">
            <input asp-for="Description" class="form-control">
            <label asp-for="Description">Description</label>
            <span asp-validation-for="Description" style="color:darkred"></span>
        </div>

        <div class="mb-3 col-md-4">
            <label asp-for="PhotoFile" class="form-label"> Image </label>
            <input asp-for="PhotoFile" class="form-control">
            <span asp-validation-for="PhotoFile" style="color:darkred"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>


    </form>




</div>
